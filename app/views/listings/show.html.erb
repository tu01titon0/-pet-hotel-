<p id="notice"><%= notice %></p>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Show</h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <p>
        <strong>Name:</strong>
        <%= @listing.name %>
      </p>
    </li>
    <li class="list-group-item">
      <p>
        <strong>Price:</strong>
        <%= @listing.price %>
      </p>    
    </li>
    <li class="list-group-item">
      <p>
        <strong>Status:</strong>
        <%= @listing.status %>
      </p>    
    </li>
  </ul>
  <div class="card-body">
    <%= link_to 'Edit', edit_listing_path(@listing), class:"card-link"%>
    <%= link_to 'Back', listings_path, class:"card-link" %>
  </div>
</div>