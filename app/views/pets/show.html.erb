<p id="notice"><%= notice %></p>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Show</h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <p>
        <strong>Name:</strong>
        <%= @pet.name %>
      </p>
    </li>
    <li class="list-group-item">
      <p>
        <strong>Gender:</strong>
        <%= @pet.gender %>
      </p>    
    </li>
    <li class="list-group-item">
      <p>
        <strong>Type:</strong>
        <%= @pet.pet_type %>
      </p>    
    </li>    
    <li class="list-group-item">
      <p>
        <strong>Age:</strong>
        <%= @pet.age %>
      </p>    
    </li>  
  </ul>
  <div class="card-body">
    <%= link_to 'Edit', edit_pet_path(@pet), class:"card-link"%>
    <%= link_to 'Back', pets_path, class:"card-link" %>
  </div>
</div>